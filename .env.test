# ====================================
# TurboStack WordPress Docker - Ambiente de Teste
# ====================================
# Configurações para testes e staging

# ====================================
# CONFIGURAÇÕES DO PROJETO
# ====================================
PROJECT_NAME=wp-site-test
DOMAIN=test.meusite.com.br

# ====================================
# BANCO DE DADOS
# ====================================
MYSQL_ROOT_PASSWORD=test_root_password_123
MYSQL_DATABASE=wp-site-test
MYSQL_USER=wp-test-user
MYSQL_PASSWORD=test_wp_password_123

# ====================================
# AUTENTICAÇÃO TRAEFIK (TESTE)
# ====================================
# Hash para usuário "test" com senha "test123"
ADMINER_AUTH=test:$2y$10$example_hash_for_testing_only
FILES_AUTH=test:$2y$10$example_hash_for_testing_only

# ====================================
# NGINX AUTH (COMPATIBILIDADE - NÃO USADO)
# ====================================
NGINX_AUTH_USER=
NGINX_AUTH_PASS=

# ====================================
# CONFIGURAÇÕES OPCIONAIS
# ====================================
TZ=America/Sao_Paulo
